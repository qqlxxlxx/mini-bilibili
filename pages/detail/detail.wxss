.main{
	background: #fff;
}
.video-info{
	margin-bottom: 50rpx;
}
.video-wrap{
  overflow: hidden;
	height: 422rpx;
	background: #000;
	display: flex;
	justify-content: center;
	align-items: center;
}
.video-wrap video{
	width: 100%;
}
.video-title{
	margin: 30rpx 0 20rpx;
	padding: 0 20rpx;
	font-size: 34rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.video-info-items{
	padding: 0 20rpx;
}
.video-info-items text{
	color: #999;
	font-size: 25rpx;
	margin-right: 20rpx;
}
.video-info-items .video-author{
	color: #212121;
	margin-right: 50rpx;
}

.video-others{
	padding: 0 5rpx;
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 50rpx;
}
.video-others .video-others-item{
	width: 50%;
	padding: 0 15rpx;
	margin-bottom: 30rpx;
}
.video-others .other-img{
	width: 100%;
	height: 212rpx;
	border-radius: 10rpx;
	overflow: hidden;
	position: relative;
}
.video-others .other-img::after{
	content: "";
	display: block;
	width: 100%;
	height: 45rpx;
	position: absolute;
	bottom: 0;
	background: linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,0.5));
}
.video-others .other-img image{
	width: 100%;
	height: 100%;
}
.video-others .other-img .video-other-info{
  position: absolute;
	bottom: 5rpx;
	z-index: 10;
	width: 100%;
	display: flex;
	justify-content: space-around;
}
.video-others .other-img .video-other-info text{
  padding-left: 40rpx;
	font-size: 22rpx;
	color: #fff;
}
.video-others .other-img .video-other-info text:nth-child(1){
  background: url("data:image/svg+xml;base64,") no-repeat left center/28rpx;
}
.video-others .other-img .video-other-info text:nth-child(2){
  background: url("data:image/svg+xml;base64,") no-repeat left center/28rpx;
}
.video-others .others-title{
	margin-top: 8rpx;
	font-size: 25rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}

.comment-wrap{
	padding: 20rpx;
	font-size: 28rpx;
}
.comment-wrap .comment-total{
	margin-bottom: 30rpx;
}
.comment-wrap .comment-total text{
	color: #666;
}
.comment-wrap .comment-list .comment-item{
	display: flex;
	padding: 30rpx 0;
	border-bottom: 1px solid #eee;
}
.comment-item .user-img{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	overflow: hidden;
}
.comment-item .user-img image{
	width: 100%;
	height: 100%;
}
.comment-item .comment-item-info{
	flex: 7;
	margin-left: 20rpx;
  
}
.comment-item .comment-item-info .comment-right-top{
	display: flex;
	justify-content: space-between;
	color: #757575;
	font-size: 25rpx;
	margin-bottom: 20rpx;
}
.comment-item .comment-item-info .comment-right-bottom{
  color: #212121
}

.footer{
	margin: 50rpx 0 80rpx;
	text-align: center;
	font-size: 25rpx;
	color: #666;
}